package org.njp.dao;

import javax.ejb.Stateless;
import javax.mail.MessagingException;

import org.njp.ejb.MailSender;
import org.njp.entities.Korisnici;

@Stateless
public class DAOKorisnik extends DAOAbstractDatabase<Korisnici> implements IDAOKorisnik {

	public DAOKorisnik() {
		super(Korisnici.class);
	}

	@Override
	public boolean validate(String email, String password) {
		
		Long sz = (java.lang.Long) entityManager.createQuery("SELECT COUNT(k) FROM Korisnici k WHERE k.email = ?1 AND k.password = ?2")
		.setParameter(1, email)
		.setParameter(2, password)
		.getResultList().get(0);
		
		Session session = (Session) entityManager.unwrap(org.hibernate.Session.class);
		
		
		return sz == 1;
	}

	@Override
	public boolean tryAdd(String ime, String prezime, String email, String password) {
		Long sz = (Long) entityManager.createQuery("SELECT COUNT(k) FROM Korisnici k WHERE k.email = ?1")
				.setParameter(1, email)
				.getResultList().get(0);
		
		
		if (sz == 1) {
			return false;
		}
		
		try {
			new MailSender(email, "REGISTROVAO SI SE", "RAF! RAF! RAF!");
		} catch (MessagingException mex) {
			mex.printStackTrace();
		}
		
		Korisnici k = new Korisnici();
		k.setEmail(email);
		k.setIme(ime);
		k.setPrezime(prezime);
		k.setPassword(password);
		entityManager.persist(k);
		entityManager.flush();
		
		return true;
		
	}
}
